#!/usr/bin/env node

'use strict';

var server = require('../src/biz-server'),
    mock = require('biz-mock'),
    argv = require('optimist')
    .boolean('cors')
    .argv;

argv.root = argv._[0];

function start(options){
	server.startBizServer(options)
}

if(argv.init !== void 0){
    switch(argv.init){
    //初始化mock
    case 'mock':
        mock.initFolder();
        break;
    default:
        break;
    }
} else if(argv.v || argv.version) {
    console.log(server.version)
} else {
    start(argv);
}

